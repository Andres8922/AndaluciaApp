<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvNombrePista"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pista 1"
        android:textSize="24sp"
        android:layout_marginBottom="32dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button android:id="@+id/btnAnterior" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Anterior" />
        <Button android:id="@+id/btnPlay" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Play" />
        <Button android:id="@+id/btnPause" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Pausa" />
        <Button android:id="@+id/btnSiguiente" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Siguiente" />
    </LinearLayout>
</LinearLayout>